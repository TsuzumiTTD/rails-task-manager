<h1><%= "My Tasks" %></h1>
<p><%= "X = completed" %></p>

<% @tasks.each do |task| %>
  <p><%= [task.completed ? "X" : ' ' ]%>
  <%= link_to task.title, task_path(task)%>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<% end %>

<%= link_to "Add a new task", tasks_new_path%>
